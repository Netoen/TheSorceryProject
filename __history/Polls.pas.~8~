type
  TForm4 = class(TForm)
    Panel1: TPanel;
    TrackBar1: TTrackBar;
    ProgressBar1: TProgressBar;
    SpinEdit1: TSpinEdit;
    Button1: TButton;
    Label1: TLabel;
